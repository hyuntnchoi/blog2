<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>
  <header>
    <% include ../partials/header %>
  </header>
  <div class="users">

      <!-- main start -->
      
      <!-- views/users/new.ejs -->
      <div class="new">
        <h3>회원가입</h3>
        <form id="create_user" class="users_form" action="/users" method="post">
            <label>이메일* <span id="email_error" class="error_message"><%= emailError?emailError:"" %></span></label>
            <input type="text" id="email" name="user[email]" value="<%= formData?formData.email:"" %>">
            <label>별명* <span id="nickname_error" class="error_message"><%= nicknameError?nicknameError:"" %></span></label>
            <input type="text" id="nickname" name="user[nickname]" value="<%= formData?formData.email:"" %>">
            <label>비밀번호* <span id="password_error" class="error_message"><%= passwordError?passwordError:"" %></span></label>
            <input type="text" id="password" name="user[password]" value="">
            <label>비밀번호 확인* <span id="password_confirmation_error" class="error_message"></span></label>
            <input type="text" id="password_confirmation" name="user[passwordConfirmation]" value="">
            <p><small>*Required</small></p>
            <input type="button" class=submit_btn" value="Submit">
        </form>
        <a href="javascript:history.back()"><button>뒤로</button>
      </div>
      <script type="text/javascript" src="/js/userform.js"></script>

      <!-- main end -->
  </div>

  <!-- footer -->
  <% include ../partials/footer %>
</body>
</html>